<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.0" xmlns="http://www.w3.org/2001/vxml" xml:lang="fr-FR">

  <form id="accueil">
    <field name="dept">
      <prompt>
        Bienvenue. Composez votre numéro de département à deux chiffres.
      </prompt>
      <grammar mode="dtmf" src="builtin:dtmf/digits?length=2"/>
      <noinput><prompt>Je n'ai rien entendu.</prompt><reprompt/></noinput>
      <nomatch><prompt>Entrée invalide.</prompt><reprompt/></nomatch>
      <filled>
        <prompt>
          Vous êtes dans le comité du département <value expr="dept"/>.
        </prompt>
        <goto next="#fin"/>
      </filled>
    </field>
  </form>

  <form id="fin">
    <block>
      <prompt>Merci pour votre appel. Au revoir.</prompt>
      <disconnect/>
    </block>
  </form>

</vxml>

<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.0" xml:lang="fr-FR">

  <!-- ACCUEIL -->
  <form id="accueil">
    <block>
      <prompt bargein="true">
        Bienvenue à l’Association Valentin Haüy.
        Veuillez composer votre département en deux étapes.
        D’abord, tapez le premier chiffre parmi 0 à 9.
      </prompt>
      <goto next="#menu_dizaine"/>
    </block>
  </form>

  <!-- PREMIER CHIFFRE (dizaine) -->
  <menu id="menu_dizaine" dtmf="true">
    <prompt>Choisissez le premier chiffre de votre département : 0 à 9.</prompt>
    <choice dtmf="0" next="#d1_0"><prompt>0</prompt></choice>
    <choice dtmf="1" next="#d1_1"><prompt>1</prompt></choice>
    <choice dtmf="2" next="#d1_2"><prompt>2</prompt></choice>
    <choice dtmf="3" next="#d1_3"><prompt>3</prompt></choice>
    <choice dtmf="4" next="#d1_4"><prompt>4</prompt></choice>
    <choice dtmf="5" next="#d1_5"><prompt>5</prompt></choice>
    <choice dtmf="6" next="#d1_6"><prompt>6</prompt></choice>
    <choice dtmf="7" next="#d1_7"><prompt>7</prompt></choice>
    <choice dtmf="8" next="#d1_8"><prompt>8</prompt></choice>
    <choice dtmf="9" next="#d1_9"><prompt>9</prompt></choice>
    <noinput><prompt>Pas d’entrée. Répétez.</prompt><reprompt/></noinput>
    <nomatch><prompt>Choix invalide.</prompt><reprompt/></nomatch>
  </menu>

  <!-- DEUXIÈME CHIFFRE (unité) -->
  <form id="d1_0"><block><prompt>Premier chiffre zéro. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_0"/></block></form>
  <form id="d1_1"><block><prompt>Premier chiffre un. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_1"/></block></form>
  <form id="d1_2"><block><prompt>Premier chiffre deux. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_2"/></block></form>
  <form id="d1_3"><block><prompt>Premier chiffre trois. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_3"/></block></form>
  <form id="d1_4"><block><prompt>Premier chiffre quatre. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_4"/></block></form>
  <form id="d1_5"><block><prompt>Premier chiffre cinq. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_5"/></block></form>
  <form id="d1_6"><block><prompt>Premier chiffre six. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_6"/></block></form>
  <form id="d1_7"><block><prompt>Premier chiffre sept. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_7"/></block></form>
  <form id="d1_8"><block><prompt>Premier chiffre huit. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_8"/></block></form>
  <form id="d1_9"><block><prompt>Premier chiffre neuf. Tapez maintenant le second chiffre.</prompt><goto next="#menu_unite_9"/></block></form>

  <!-- MENUS D’UNITÉS -->
  <menu id="menu_unite_9" dtmf="true">
    <prompt>Second chiffre du département (0 à 9).</prompt>
    <choice dtmf="2" next="#announce_92"><prompt>2</prompt></choice>
    <choice dtmf="3" next="#announce_93"><prompt>3</prompt></choice>
    <choice dtmf="4" next="#announce_94"><prompt>4</prompt></choice>
    <choice dtmf="5" next="#announce_95"><prompt>5</prompt></choice>
    <choice dtmf="9" next="#announce_99"><prompt>9</prompt></choice>
    <choice dtmf="0" next="#menu_principal"><prompt>0</prompt></choice>
    <noinput><prompt>Pas d’entrée.</prompt><reprompt/></noinput>
    <nomatch><prompt>Invalide.</prompt><reprompt/></nomatch>
  </menu>

  <form id="announce_92"><block><prompt>Vous êtes dans le département 92, Hauts-de-Seine.</prompt><goto next="#menu_principal"/></block></form>
  <form id="announce_93"><block><prompt>Vous êtes dans le département 93, Seine-Saint-Denis.</prompt><goto next="#menu_principal"/></block></form>
  <form id="announce_94"><block><prompt>Vous êtes dans le département 94, Val-de-Marne.</prompt><goto next="#menu_principal"/></block></form>
  <form id="announce_95"><block><prompt>Vous êtes dans le département 95, Val-d’Oise.</prompt><goto next="#menu_principal"/></block></form>
  <form id="announce_99"><block><prompt>Département fictif pour test.</prompt><goto next="#menu_principal"/></block></form>

  <!-- MENU PRINCIPAL -->
  <form id="menu_principal_intro">
    <block>
      <prompt>
        Tapez : 1 pour sport, 2 pour loisir, 3 pour sortie, 4 pour santé, 5 pour actualité.
      </prompt>
      <goto next="#menu_principal"/>
    </block>
  </form>

  <menu id="menu_principal" dtmf="true">
    <prompt>Menu principal. 1 sport, 2 loisir, 3 sortie, 4 santé, 5 actualité, 8 changer de département, 9 quitter.</prompt>
    <choice dtmf="1" next="#sport"><prompt>1 sport</prompt></choice>
    <choice dtmf="2" next="#loisir"><prompt>2 loisir</prompt></choice>
    <choice dtmf="3" next="#sortie"><prompt>3 sortie</prompt></choice>
    <choice dtmf="4" next="#sante"><prompt>4 santé</prompt></choice>
    <choice dtmf="5" next="#actu"><prompt>5 actualité</prompt></choice>
    <choice dtmf="8" next="#accueil"><prompt>8 changer de département</prompt></choice>
    <choice dtmf="9" next="#fin"><prompt>9 quitter</prompt></choice>
  </menu>

  <!-- RUBRIQUES -->
  <form id="sport"><block><prompt>Rubrique sport.</prompt><goto next="#menu_principal"/></block></form>
  <form id="loisir"><block><prompt>Rubrique loisir.</prompt><goto next="#menu_principal"/></block></form>
  <form id="sortie"><block><prompt>Rubrique sortie.</prompt><goto next="#menu_principal"/></block></form>
  <form id="sante"><block><prompt>Rubrique santé.</prompt><goto next="#menu_principal"/></block></form>
  <form id="actu"><block><prompt>Rubrique actualité.</prompt><goto next="#menu_principal"/></block></form>

  <!-- FIN -->
  <form id="fin"><block><prompt>Merci pour votre appel. Au revoir.</prompt><disconnect/></block></form>

</vxml>

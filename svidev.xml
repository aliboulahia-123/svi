<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.0" xml:lang="fr-FR">

  <!-- ===================== -->
  <!-- ACCUEIL AVEC DEPARTEMENT -->
  <!-- ===================== -->
  <form id="accueil_intro">
    <block>
      <prompt bargein="true">
        Bienvenue à l’Association Valentin Haüy.
        Composez le numéro de votre département à deux chiffres,
        puis appuyez sur dièse.
      </prompt>
      <goto next="#accueil_dept"/>
    </block>
  </form>

  <form id="accueil_dept">
    <field name="dept">
      <prompt bargein="true">Tapez maintenant le numéro de votre département.</prompt>
      <grammar mode="dtmf" src="builtin:dtmf/digits?length=2"/>
      <noinput><prompt>Je n’ai rien entendu. Réessayez.</prompt><reprompt/></noinput>
      <nomatch><prompt>Entrée invalide. Réessayez.</prompt><reprompt/></nomatch>

      <filled>
        <goto next="#announce_committee"/>
      </filled>
    </field>
  </form>

  <!-- ===================== -->
  <!-- ANNONCE COMITÉ -->
  <!-- ===================== -->
  <form id="announce_committee">
    <block>
      <prompt bargein="true">
        <if cond="dept == '75'">
          Vous êtes rattaché au Comité de Paris.
        <elseif cond="dept == '92'"/>
          Vous êtes dans le département 92.
          Plusieurs comités existent : tapez 1 pour Hauts-de-Seine Nord, 2 pour Hauts-de-Seine Sud.
        <elseif cond="dept == '93'"/>
          Vous êtes rattaché au Comité de Seine-Saint-Denis.
        <elseif cond="dept == '94'"/>
          Vous êtes rattaché au Comité du Val-de-Marne.
        <elseif cond="dept == '33'"/>
          Vous êtes rattaché au Comité de Gironde.
        <else/>
          Vous êtes rattaché au Comité du département <value expr="dept"/>.
        </if>
      </prompt>

      <!-- Si c’est le 92, on va au sous-menu 92 -->
      <if cond="dept == '92'">
        <goto next="#menu_92"/>
      <else/>
        <goto next="#menu_principal"/>
      </if>
    </block>
  </form>

  <!-- ===================== -->
  <!-- CAS SPÉCIAL 92 -->
  <!-- ===================== -->
  <menu id="menu_92" dtmf="true">
    <prompt>
      Tapez 1 pour Hauts-de-Seine Nord, 2 pour Hauts-de-Seine Sud, 9 pour changer de département.
    </prompt>
    <choice dtmf="1" next="#set_92_nord"><prompt>1 Nord</prompt></choice>
    <choice dtmf="2" next="#set_92_sud"><prompt>2 Sud</prompt></choice>
    <choice dtmf="9" next="#accueil_dept"><prompt>9 Changer de département</prompt></choice>
    <noinput><prompt>Pas d’entrée. Répétez.</prompt><reprompt/></noinput>
    <nomatch><prompt>Invalide. Répétez.</prompt><reprompt/></nomatch>
  </menu>

  <form id="set_92_nord">
    <block>
      <prompt>Vous êtes rattaché au Comité Hauts-de-Seine Nord.</prompt>
      <goto next="#menu_principal"/>
    </block>
  </form>

  <form id="set_92_sud">
    <block>
      <prompt>Vous êtes rattaché au Comité Hauts-de-Seine Sud.</prompt>
      <goto next="#menu_principal"/>
    </block>
  </form>

  <!-- ===================== -->
  <!-- MENU PRINCIPAL (inchangé) -->
  <!-- ===================== -->
  <form id="menu_principal_intro">
    <block>
      <prompt bargein="true">
        Tapez : 1 pour sport, 2 pour loisir, 3 pour sortie, 4 pour santé, 5 pour actualité.
        Appuyez sur dièse pour répéter ce menu.
      </prompt>
      <goto next="#menu_principal"/>
    </block>
  </form>

  <menu id="menu_principal" dtmf="true">
    <prompt>
      Menu principal. Choisissez une rubrique :
      1 sport, 2 loisir, 3 sortie, 4 santé, 5 actualité.
      8 pour changer de département, 9 pour quitter.
    </prompt>
    <choice dtmf="1" next="#menu_sport_intro"><prompt>1 sport</prompt></choice>
    <choice dtmf="2" next="#menu_loisir_intro"><prompt>2 loisir</prompt></choice>
    <choice dtmf="3" next="#menu_sortie_intro"><prompt>3 sortie</prompt></choice>
    <choice dtmf="4" next="#menu_sante_intro"><prompt>4 santé</prompt></choice>
    <choice dtmf="5" next="#menu_actu_intro"><prompt>5 actualité</prompt></choice>
    <choice dtmf="8" next="#accueil_dept"><prompt>8 changer de département</prompt></choice>
    <choice dtmf="9" next="#fin"><prompt>9 quitter</prompt></choice>
    <noinput><prompt>Je n’ai rien entendu. Répétez votre choix.</prompt><reprompt/></noinput>
    <nomatch><prompt>Choix invalide. Répétez votre choix.</prompt><reprompt/></nomatch>
  </menu>

  <!-- ===================== -->
  <!-- RUBRIQUES (inchangées) -->
  <!-- ===================== -->
  <form id="menu_sport_intro">
    <block>
      <prompt>
        Vous êtes dans la rubrique sport.
        Tapez 1 pour football, 2 pour tennis, 9 pour revenir au menu principal.
      </prompt>
      <goto next="#menu_sport"/>
    </block>
  </form>

  <menu id="menu_sport" dtmf="true">
    <prompt>Sport. 1 football, 2 tennis, 9 retour.</prompt>
    <choice dtmf="1" next="#football"><prompt>1 football</prompt></choice>
    <choice dtmf="2" next="#tennis"><prompt>2 tennis</prompt></choice>
    <choice dtmf="9" next="#menu_principal"><prompt>9 retour</prompt></choice>
    <noinput><prompt>Pas d’entrée. Répétez.</prompt><reprompt/></noinput>
    <nomatch><prompt>Invalide. Répétez.</prompt><reprompt/></nomatch>
  </menu>

  <form id="football"><block><prompt>Dernières infos football.</prompt><goto next="#menu_sport_intro"/></block></form>
  <form id="tennis"><block><prompt>Actualités tennis.</prompt><goto next="#menu_sport_intro"/></block></form>

  <form id="menu_loisir_intro">
    <block>
      <prompt>Vous êtes dans la rubrique loisir. 1 activités, 2 jeux, 9 retour.</prompt>
      <goto next="#menu_loisir"/>
    </block>
  </form>
  <menu id="menu_loisir" dtmf="true">
    <prompt>Loisir. 1 activités, 2 jeux, 9 retour.</prompt>
    <choice dtmf="1" next="#loisir_activite"><prompt>1 activités</prompt></choice>
    <choice dtmf="2" next="#loisir_jeux"><prompt>2 jeux</prompt></choice>
    <choice dtmf="9" next="#menu_principal"><prompt>9 retour</prompt></choice>
  </menu>
  <form id="loisir_activite"><block><prompt>Ateliers et loisirs créatifs.</prompt><goto next="#menu_loisir_intro"/></block></form>
  <form id="loisir_jeux"><block><prompt>Jeux et moments conviviaux.</prompt><goto next="#menu_loisir_intro"/></block></form>

  <form id="menu_sortie_intro">
    <block>
      <prompt>Vous êtes dans la rubrique sortie. 1 culture, 2 nature, 9 retour.</prompt>
      <goto next="#menu_sortie"/>
    </block>
  </form>
  <menu id="menu_sortie" dtmf="true">
    <prompt>Sortie. 1 culture, 2 nature, 9 retour.</prompt>
    <choice dtmf="1" next="#sortie_culture"><prompt>1 culture</prompt></choice>
    <choice dtmf="2" next="#sortie_nature"><prompt>2 nature</prompt></choice>
    <choice dtmf="9" next="#menu_principal"><prompt>9 retour</prompt></choice>
  </menu>
  <form id="sortie_culture"><block><prompt>Visites culturelles accessibles.</prompt><goto next="#menu_sortie_intro"/></block></form>
  <form id="sortie_nature"><block><prompt>Balades et découvertes nature.</prompt><goto next="#menu_sortie_intro"/></block></form>

  <form id="menu_sante_intro">
    <block>
      <prompt>Vous êtes dans la rubrique santé. 1 conseils, 2 accompagnement, 9 retour.</prompt>
      <goto next="#menu_sante"/>
    </block>
  </form>
  <menu id="menu_sante" dtmf="true">
    <prompt>Santé. 1 conseils, 2 accompagnement, 9 retour.</prompt>
    <choice dtmf="1" next="#sante_conseil"><prompt>1 conseils</prompt></choice>
    <choice dtmf="2" next="#sante_accompagnement"><prompt>2 accompagnement</prompt></choice>
    <choice dtmf="9" next="#menu_principal"><prompt>9 retour</prompt></choice>
  </menu>
  <form id="sante_conseil"><block><prompt>Conseils santé et bien-être.</prompt><goto next="#menu_sante_intro"/></block></form>
  <form id="sante_accompagnement"><block><prompt>Accompagnement et soutien médical.</prompt><goto next="#menu_sante_intro"/></block></form>

  <form id="menu_actu_intro">
    <block>
      <prompt>Vous êtes dans la rubrique actualité. 1 locales, 2 nationales, 9 retour.</prompt>
      <goto next="#menu_actu"/>
    </block>
  </form>
  <menu id="menu_actu" dtmf="true">
    <prompt>Actualité. 1 locales, 2 nationales, 9 retour.</prompt>
    <choice dtmf="1" next="#actu_locale"><prompt>1 locales</prompt></choice>
    <choice dtmf="2" next="#actu_nationale"><prompt>2 nationales</prompt></choice>
    <choice dtmf="9" next="#menu_principal"><prompt>9 retour</prompt></choice>
  </menu>
  <form id="actu_locale"><block><prompt>Actualités locales du comité.</prompt><goto next="#menu_actu_intro"/></block></form>
  <form id="actu_nationale"><block><prompt>Actualités nationales AVH.</prompt><goto next="#menu_actu_intro"/></block></form>

  <!-- FIN -->
  <form id="fin"><block><prompt>Merci pour votre appel. Au revoir.</prompt><disconnect/></block></form>

</vxml>
